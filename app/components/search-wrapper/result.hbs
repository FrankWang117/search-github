<div class="container search-result">
  {{#each @result as |item|}}
    <a href={{item.url}} class="card mb-3" style="width: 16rem;">
      <div class="mt-2 img-container text-center">
        <img
          src={{item.owner.avatarUrl}}
          class="card-img-top rounded-circle"
          alt={{item.owner.login}}
        />
      </div>

      <div class="card-body">
        <h5 class="card-title text-center mb-2">
          {{item.name}}
        </h5>
        <p class="card-text text-center my-1">
            <svg aria-label="star" class="octicon octicon-star" viewBox="0 0 14 16" version="1.1" width="14" height="16" role="img"><path fill-rule="evenodd" d="M14 6l-4.9-.64L7 1 4.9 5.36 0 6l3.6 3.26L2.67 14 7 11.67 11.33 14l-.93-4.74L14 6z"></path></svg>
            <span class="ml-2" >{{formatter-number item.forkCount}}</span>
        </p>
        <p class="card-text">
          {{item.description}}
        </p>
      </div>
    </a>
  {{/each}}
</div>